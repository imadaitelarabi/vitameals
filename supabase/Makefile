# SparkChats 2.0 - Database Management Makefile
# Provides commands to manage Supabase database migrations

.PHONY: help migrate migrate-local rollback clean new-migration db-status db-reset db-local gen-types switch-to-local switch-to-prod env-status env-switch migrate-prod

# Default target
help:
	@echo "SparkChats 2.0 - Database Management Commands"
	@echo ""
	@echo "Available commands:"
	@echo "  migrate          - Interactive migration (prompts for environment choice)"
	@echo "  migrate-local    - Apply migrations to local environment only"
	@echo "  migrate-prod     - Apply migrations to production (use: make migrate-prod PROJECT_REF=your_ref)"
	@echo "  rollback         - Rollback the last applied migration"
	@echo "  clean            - Clean all data from the database (DESTRUCTIVE)"
	@echo "  new-migration    - Create a new migration file (use: make new-migration NAME=your_name)"
	@echo "  db-status        - Show current migration status"
	@echo "  db-reset         - Reset database to clean state and apply all migrations"
	@echo "  db-local         - Start local Supabase instance"
	@echo "  gen-types        - Generate universal TypeScript types for mobile and web"
	@echo "                     (saved to ../types/database.types.ts)"
	@echo ""
	@echo "Environment Switching:"
	@echo "  switch-to-local  - Switch to local development environment"
	@echo "  switch-to-prod   - Switch to production environment (use: make switch-to-prod PROJECT_REF=your_ref)"
	@echo "  env-status       - Show current environment status"
	@echo "  env-switch       - Interactive environment switcher (prompts for choice)"
	@echo ""
	@echo "Examples:"
	@echo "  make migrate"
	@echo "  make new-migration NAME=add_user_preferences"
	@echo "  make switch-to-local"
	@echo "  make switch-to-prod PROJECT_REF=abcdefghijklmnop"
	@echo "  make env-switch"
	@echo ""
	@echo "âš ï¸  WARNINGS:"
	@echo "  - Always backup production database before running migrations"
	@echo "  - rollback and clean commands can cause data loss"
	@echo "  - Test migrations in development first"
	@echo "  - Update your .env file when switching environments"

# Interactive migration - prompts for environment choice
migrate:
	@echo "ğŸš€ Database Migration"
	@echo "===================="
	@echo ""
	@if ! command -v supabase >/dev/null 2>&1; then \
		echo "âŒ Supabase CLI not found. Install it with: npm install -g supabase"; \
		exit 1; \
	fi
	@echo "Choose migration target:"
	@echo "  1) Local Development"
	@echo "  2) Production"
	@echo ""
	@read -p "Enter choice (1 or 2): " choice; \
	if [ "$$choice" = "1" ]; then \
		make migrate-local; \
	elif [ "$$choice" = "2" ]; then \
		read -p "Enter your production PROJECT_REF: " ref; \
		make migrate-prod PROJECT_REF=$$ref; \
	else \
		echo "âŒ Invalid choice. Use 1 or 2."; \
	fi

# Apply migrations to local environment only
migrate-local:
	@echo "ğŸš€ Applying migrations to LOCAL environment..."
	@if ! command -v supabase >/dev/null 2>&1; then \
		echo "âŒ Supabase CLI not found. Install it with: npm install -g supabase"; \
		exit 1; \
	fi
	@echo "ğŸ“‹ Current migration status:"
	@supabase migration list
	@echo ""
	@echo "ğŸ”„ Applying migrations to local database..."
	@supabase migration up
	@echo "âœ… Local migrations applied successfully!"

# Rollback the last migration
rollback:
	@echo "âš ï¸  Rolling back last migration..."
	@echo "âš ï¸  WARNING: This operation can cause data loss!"
	@read -p "Are you sure you want to rollback? (y/N): " confirm; \
	if [ "$$confirm" = "y" ] || [ "$$confirm" = "Y" ]; then \
		echo "ğŸ”„ Rolling back..."; \
		supabase migration repair --status reverted; \
		echo "âœ… Rollback completed"; \
	else \
		echo "âŒ Rollback cancelled"; \
	fi

# Clean all data from database
clean:
	@echo "ğŸ§¹ Cleaning database..."
	@echo "âš ï¸  WARNING: This will delete ALL data in your database!"
	@echo "âš ï¸  This operation is IRREVERSIBLE!"
	@read -p "Type 'DELETE_ALL_DATA' to confirm: " confirm; \
	if [ "$$confirm" = "DELETE_ALL_DATA" ]; then \
		echo "ğŸ”„ Resetting database..."; \
		supabase db reset; \
		echo "âœ… Database cleaned and reset"; \
	else \
		echo "âŒ Clean operation cancelled"; \
	fi

# Create a new migration file
new-migration:
	@if [ -z "$(NAME)" ]; then \
		echo "âŒ Please provide a migration name:"; \
		echo "   make new-migration NAME=your_migration_name"; \
		exit 1; \
	fi
	@echo "ğŸ“ Creating new migration: $(NAME)"
	@supabase migration new $(NAME)
	@echo "âœ… Migration file created in migrations/"
	@echo "ğŸ“ Don't forget to edit the migration file before applying it!"

# Show current migration status
db-status:
	@echo "ğŸ“Š Database Migration Status"
	@echo "=============================="
	@if ! command -v supabase >/dev/null 2>&1; then \
		echo "âŒ Supabase CLI not found. Install it with: npm install -g supabase"; \
		exit 1; \
	fi
	@echo "ğŸ“‹ Migration list:"
	@supabase migration list
	@echo ""
	@echo "ğŸ”— Project status:"
	@supabase status

# Reset database and apply all migrations
db-reset:
	@echo "ğŸ”„ Resetting database to clean state..."
	@echo "âš ï¸  WARNING: This will delete all data and reapply migrations!"
	@read -p "Are you sure? (y/N): " confirm; \
	if [ "$$confirm" = "y" ] || [ "$$confirm" = "Y" ]; then \
		echo "ğŸ”„ Resetting..."; \
		supabase db reset; \
		echo "âœ… Database reset and migrations applied"; \
	else \
		echo "âŒ Reset cancelled"; \
	fi

# Start local Supabase instance
db-local:
	@echo "ğŸš€ Starting local Supabase instance..."
	@if ! command -v supabase >/dev/null 2>&1; then \
		echo "âŒ Supabase CLI not found. Install it with: npm install -g supabase"; \
		exit 1; \
	fi
	@echo "ğŸ”„ Starting services..."
	@supabase start
	@echo "âœ… Local Supabase is running!"
	@echo "ğŸ“Š Dashboard: http://localhost:54323"
	@echo "ğŸ”— API URL: http://localhost:54321"

# Stop local Supabase instance
db-local-stop:
	@echo "ğŸ›‘ Stopping local Supabase instance..."
	@supabase stop
	@echo "âœ… Local Supabase stopped"

# Generate TypeScript types for both mobile and web (universal types)
gen-types:
	@echo "ğŸ“ Generating universal TypeScript types from database schema..."
	@if ! command -v supabase >/dev/null 2>&1; then \
		echo "âŒ Supabase CLI not found. Install it with: npm install -g supabase"; \
		exit 1; \
	fi
	@mkdir -p ../types
	@supabase gen types typescript --local > ../types/database.types.ts
	@echo "âœ… Universal types generated at ../types/database.types.ts"
	@echo "ğŸ“± This file can be used by both mobile and web projects"

# Link to Supabase project (for initial setup)
link:
	@echo "ğŸ”— Linking to Supabase project..."
	@if [ -z "$(PROJECT_REF)" ]; then \
		echo "âŒ Please provide your project reference:"; \
		echo "   make link PROJECT_REF=your_project_ref"; \
		exit 1; \
	fi
	@supabase link --project-ref $(PROJECT_REF)
	@echo "âœ… Project linked successfully!"

# Initialize Supabase in current directory
init:
	@echo "ğŸ”§ Initializing Supabase project..."
	@supabase init
	@echo "âœ… Supabase project initialized!"
	@echo "ğŸ“ Next steps:"
	@echo "   1. Link to your project: make link PROJECT_REF=your_ref"
	@echo "   2. Apply migrations: make migrate"

# Development workflow commands
dev-setup:
	@echo "ğŸ› ï¸  Setting up development environment..."
	@echo "1ï¸âƒ£ Starting local Supabase..."
	@make db-local
	@echo ""
	@echo "2ï¸âƒ£ Applying migrations..."
	@make migrate
	@echo ""
	@echo "3ï¸âƒ£ Generating types..."
	@make gen-types
	@echo ""
	@echo "âœ… Development environment ready!"

# Check if required tools are installed
check-tools:
	@echo "ğŸ” Checking required tools..."
	@if command -v supabase >/dev/null 2>&1; then \
		echo "âœ… Supabase CLI: $(shell supabase --version)"; \
	else \
		echo "âŒ Supabase CLI not found"; \
		echo "   Install with: npm install -g supabase"; \
	fi
	@if command -v node >/dev/null 2>&1; then \
		echo "âœ… Node.js: $(shell node --version)"; \
	else \
		echo "âŒ Node.js not found"; \
	fi
	@if command -v npm >/dev/null 2>&1; then \
		echo "âœ… npm: $(shell npm --version)"; \
	else \
		echo "âŒ npm not found"; \
	fi

# Backup database (requires pg_dump)
backup:
	@echo "ğŸ’¾ Creating database backup..."
	@if [ -z "$(BACKUP_NAME)" ]; then \
		BACKUP_NAME="backup_$(shell date +%Y%m%d_%H%M%S)"; \
	else \
		BACKUP_NAME="$(BACKUP_NAME)"; \
	fi; \
	echo "ğŸ“ Backup name: $$BACKUP_NAME.sql"; \
	echo "âš ï¸  Note: You need to configure your database connection for pg_dump"; \
	echo "ğŸ”„ Use 'supabase db dump' for Supabase-specific backup"

# Show migration files
show-migrations:
	@echo "ğŸ“‹ Available migration files:"
	@echo "============================="
	@ls -la migrations/ || echo "âŒ No migrations found"

# Validate migrations syntax
validate:
	@echo "âœ… Validating migration syntax..."
	@for file in migrations/*.sql; do \
		if [ -f "$$file" ]; then \
			echo "ğŸ” Checking $$file..."; \
			supabase migration repair --status applied; \
		fi; \
	done
	@echo "âœ… Validation complete"

# Apply migrations to production without switching environment
migrate-prod:
	@echo "ğŸš€ Applying migrations to PRODUCTION..."
	@if [ -z "$(PROJECT_REF)" ]; then \
		echo "âŒ Please provide your production project reference:"; \
		echo "   make migrate-prod PROJECT_REF=your_project_ref"; \
		echo ""; \
		echo "ğŸ’¡ Find your PROJECT_REF in Supabase Dashboard:"; \
		echo "   https://supabase.com/dashboard/project/YOUR_PROJECT_REF"; \
		exit 1; \
	fi
	@echo ""
	@echo "âš ï¸  WARNING: You are about to apply migrations to PRODUCTION!"
	@echo "âš ï¸  This operation can affect live data."
	@echo ""
	@echo "Current environment status:"
	@supabase status || true
	@echo ""
	@read -p "Are you sure you want to apply migrations to production? (y/N): " confirm; \
	if [ "$$confirm" = "y" ] || [ "$$confirm" = "Y" ]; then \
		echo ""; \
		echo "ğŸ”„ Creating temporary link to production..."; \
		TEMP_STATUS=$$(supabase status --temp-jwt-secret=true 2>&1 || true); \
		supabase link --project-ref $(PROJECT_REF) --password-stdin <<< "$$TEMP_STATUS" > /dev/null 2>&1; \
		echo "ğŸ“‹ Current migration status on production:"; \
		supabase migration list; \
		echo ""; \
		echo "ğŸ”„ Applying migrations..."; \
		supabase db push; \
		echo ""; \
		echo "âœ… Migrations applied to production successfully!"; \
		echo ""; \
		echo "ğŸ”„ Restoring previous environment link..."; \
		if echo "$$TEMP_STATUS" | grep -q "127.0.0.1\|localhost"; then \
			supabase link --project-ref local --password-stdin <<< "$$TEMP_STATUS" > /dev/null 2>&1; \
			echo "âœ… Restored local environment link"; \
		fi; \
	else \
		echo "âŒ Migration cancelled"; \
	fi

# ==========================================
# Environment Switching Commands
# ==========================================

# Switch to local development environment
switch-to-local:
	@echo "ğŸ”„ Switching to LOCAL development environment..."
	@echo ""
	@echo "1ï¸âƒ£ Stopping any existing local Supabase instance..."
	@supabase stop 2>/dev/null || true
	@echo ""
	@echo "2ï¸âƒ£ Starting local Supabase instance..."
	@supabase start
	@echo ""
	@echo "3ï¸âƒ£ Getting local credentials..."
	@echo "ğŸ“‹ Local Supabase Status:"
	@supabase status
	@echo ""
	@echo "4ï¸âƒ£ Generating universal TypeScript types..."
	@mkdir -p ../types
	@supabase gen types typescript --local > ../types/database.types.ts
	@echo "âœ… Universal types generated at ../types/database.types.ts"
	@echo "ğŸ“± This file can be used by both mobile and web projects"
	@echo ""
	@echo "ğŸ”§ NEXT STEP - Update your environment files:"
	@echo "============================================="; \
	echo ""; \
	echo "ğŸ“± For MOBILE (../mobile/.env):"; \
	echo "EXPO_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321"; \
	LOCAL_ANON_KEY=$$(supabase status | grep "anon key" | awk '{print $$3}' | tr -d '\n'); \
	echo "EXPO_PUBLIC_SUPABASE_ANON_KEY=$$LOCAL_ANON_KEY"; \
	echo ""; \
	echo "ğŸŒ For WEB (../web/.env.local):"; \
	echo "PUBLIC_SUPABASE_ENABLED=true"; \
	echo "PUBLIC_SUPABASE_URL=http://127.0.0.1:54321"; \
	echo "PUBLIC_SUPABASE_ANON_KEY=$$LOCAL_ANON_KEY"; \
	echo ""; \
	echo "ğŸ“ Studio URL: http://127.0.0.1:54323"; \
	echo "ğŸ“ API URL: http://127.0.0.1:54321"; \
	echo "ğŸ“„ Universal types: ../types/database.types.ts"; \
	echo ""
	@read -p "Press ENTER after updating your environment files..." dummy
	@echo "âœ… Successfully switched to LOCAL environment!"

# Switch to production environment
switch-to-prod:
	@echo "ğŸ”„ Switching to PRODUCTION environment..."
	@echo ""
	@if [ -z "$(PROJECT_REF)" ]; then \
		echo "âŒ Please provide your production project reference:"; \
		echo "   make switch-to-prod PROJECT_REF=your_project_ref"; \
		echo ""; \
		echo "ğŸ’¡ Find your PROJECT_REF in Supabase Dashboard:"; \
		echo "   https://supabase.com/dashboard/project/YOUR_PROJECT_REF"; \
		exit 1; \
	fi
	@echo "1ï¸âƒ£ Stopping local Supabase instance..."
	@supabase stop 2>/dev/null || true
	@echo ""
	@echo "2ï¸âƒ£ Linking to production project: $(PROJECT_REF)..."
	@supabase link --project-ref $(PROJECT_REF)
	@echo ""
	@echo "3ï¸âƒ£ Checking production project status..."
	@supabase migration list || echo "âš ï¸  Migration list may be empty if this is a new project"
	@echo ""
	@echo "4ï¸âƒ£ Generating universal TypeScript types..."
	@mkdir -p ../types
	@supabase gen types typescript > ../types/database.types.ts
	@echo "âœ… Universal types generated at ../types/database.types.ts"
	@echo "ğŸ“± This file can be used by both mobile and web projects"
	@echo ""
	@echo "ğŸ”§ NEXT STEP - Update your environment files:"
	@echo "============================================="; \
	echo ""; \
	echo "ğŸ“± For MOBILE (../mobile/.env):"; \
	echo "EXPO_PUBLIC_SUPABASE_URL=https://$(PROJECT_REF).supabase.co"; \
	echo "EXPO_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key"; \
	echo ""; \
	echo "ğŸŒ For WEB (../web/.env.local):"; \
	echo "PUBLIC_SUPABASE_ENABLED=true"; \
	echo "PUBLIC_SUPABASE_URL=https://$(PROJECT_REF).supabase.co"; \
	echo "PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key"; \
	echo ""; \
	echo "ğŸ’¡ Get your production anon key from:"; \
	echo "   https://supabase.com/dashboard/project/$(PROJECT_REF)/settings/api"; \
	echo "ğŸ“„ Universal types: ../types/database.types.ts"; \
	echo ""
	@read -p "Press ENTER after updating your environment files..." dummy
	@echo "âœ… Successfully switched to PRODUCTION environment!"
	@echo ""
	@echo "âš ï¸  REMINDER: Test migrations locally before applying to production!"

# Show current environment status
env-status:
	@echo "ğŸ“Š Current Environment Status"
	@echo "=============================="
	@echo ""
	@echo "ğŸ” Checking Supabase CLI status..."
	@if supabase status >/dev/null 2>&1; then \
		echo "ğŸ“‹ Supabase Status:"; \
		supabase status; \
		echo ""; \
		if supabase status | grep -q "127.0.0.1\|localhost"; then \
			echo "ğŸ  Current Environment: LOCAL DEVELOPMENT"; \
			echo "ğŸ“Š Dashboard: http://127.0.0.1:54323"; \
			echo "ğŸ”— API URL: http://127.0.0.1:54321"; \
		else \
			echo "ğŸŒ Current Environment: PRODUCTION"; \
			PROJECT_REF=$$(supabase status 2>/dev/null | grep "Project ref" | awk '{print $$3}' || echo "unknown"); \
			echo "ğŸ”— Project: $$PROJECT_REF"; \
			echo "ğŸ“Š Dashboard: https://supabase.com/dashboard/project/$$PROJECT_REF"; \
		fi; \
	else \
		echo "âŒ No active Supabase environment detected"; \
		echo ""; \
		echo "To set up an environment:"; \
		echo "  ğŸ  Local:      make switch-to-local"; \
		echo "  ğŸŒ Production: make switch-to-prod PROJECT_REF=your_ref"; \
	fi
	@echo ""
	@echo "ğŸ“ Environment files status:"
	@echo "ğŸŒ Web (.env.local):"
	@if [ -f "../web/.env.local" ]; then \
		echo "  âœ… ../web/.env.local exists"; \
		if grep -q "127.0.0.1\|localhost" ../web/.env.local 2>/dev/null; then \
			echo "  ğŸ  Configured for: LOCAL"; \
		elif grep -q "supabase.co" ../web/.env.local 2>/dev/null; then \
			echo "  ğŸŒ Configured for: PRODUCTION"; \
		else \
			echo "  âš ï¸  Configuration unclear"; \
		fi; \
	else \
		echo "  âŒ ../web/.env.local not found"; \
	fi
	@echo "ğŸ“± Mobile (.env):"
	@if [ -f "../mobile/.env" ]; then \
		echo "  âœ… ../mobile/.env exists"; \
		if grep -q "127.0.0.1\|localhost" ../mobile/.env 2>/dev/null; then \
			echo "  ğŸ  Configured for: LOCAL"; \
		elif grep -q "supabase.co" ../mobile/.env 2>/dev/null; then \
			echo "  ğŸŒ Configured for: PRODUCTION"; \
		else \
			echo "  âš ï¸  Configuration unclear"; \
		fi; \
	else \
		echo "  âŒ ../mobile/.env not found"; \
	fi
	@echo "ğŸ“„ Universal types:"
	@if [ -f "../types/database.types.ts" ]; then \
		echo "  âœ… ../types/database.types.ts exists"; \
	else \
		echo "  âŒ ../types/database.types.ts not found - run 'make gen-types'"; \
	fi
	@echo ""
	@echo "ğŸ“‹ Migration Status:"
	@supabase migration list 2>/dev/null || echo "âŒ No migration status available"

# Quick environment switch helper
env-switch:
	@echo "ğŸ”„ Environment Quick Switch"
	@echo "=========================="
	@echo ""
	@echo "Choose your target environment:"
	@echo "  1) Local Development"
	@echo "  2) Production"
	@echo ""
	@read -p "Enter choice (1 or 2): " choice; \
	if [ "$$choice" = "1" ]; then \
		make switch-to-local; \
	elif [ "$$choice" = "2" ]; then \
		read -p "Enter your production PROJECT_REF: " ref; \
		make switch-to-prod PROJECT_REF=$$ref; \
	else \
		echo "âŒ Invalid choice. Use 1 or 2."; \
	fi